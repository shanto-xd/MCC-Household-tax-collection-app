<%- include ../includes/header.ejs %>

    <title>প্লেট অর্ডার | <%=userRole%></title>
</head>

<body>
    <%- include('../includes/nav.ejs', {userRole: userRole}) %>
    <h1 class="text-center my-3">অর্ডারের তথ্য দেখুন <span class="ml-5"><a class="btn btn-lg btn-primary" data-toggle="modal" data-target="#searchAssessment" href="">তথ্য খুঁজুন</a></span></h1> 

    <% if(surveys.length > 0) { %>
    
    <table class="table table-sm" border = "1"  style="font-size: 13px !important">
        <thead>
            <tr>
                <th>এসেসমেন্ট আইডি</th>
                <th>বিল নং</th>
                <th>মালিকের নাম</th>
                <th>পোস্টকোড</th>
                <th>ওয়ার্ড</th>
                <th>রাস্তা/মহল্লা</th>
                <th>থানা</th>
                <th>মোবাইল</th>
                <th>হোল্ডিং এর ধরন</th>
                <th>হোল্ডিং এর নাম</th>
                <th>প্লেট সাইজ</th> 
                <th>বিল পরিশোধ</th>
                <th>হোল্ডিং নং</th>
                <th>অর্ডার</th>
                <th>প্লেট ডেলিভারি</th>
            </tr>
        </thead>

        <% surveys.forEach(survey => {%>
             <tbody>
                <tr>
                    <td><a title="বিস্তারিত তথ্য দেখতে ক্লিক করুন" href="/show-info/<%=survey._id%>"><%= survey.assessment_id%></a></td>
                    <td><%= survey.orderBill%></td>
                    <td><%= survey.ownerName%></td>
                    <td><%= survey.postcode %></td>
                    <td><%= survey.ward %></td>
                    <td><%= survey.road %></td>
                    <td><%= survey.thana %></td>
                    <td><%= survey.mobile %></td>
                    <td><%= survey.holdingType %></td>
                    <td><%= survey.holdingName %></td>
                    <td class="text-danger" ><%= survey.plateSize %></td>
                    <td><%= survey.orderPaid %></td>
                    <td class="text-success"><%= survey.holding %></td>
                    <td><%=survey.orderStatus%></td>
                    <td>
                        <div class="row">
                            <div class="col-sm-4 mx-auto">
                                 <form action="/orders/plate-delivery/<%=survey._id%>?delivery=true&page=<%=currentPage%>" method="POST">
                                    <input class="btn p-1 m-1 btn-success btn-sm" type="submit" value="Deliver"> 
                                </form>
                            </div>
                            <div class="col-sm-8 mx-auto">
                                <form class="form-inline" action="/orders/plate-delivery/<%=survey._id%>?delivery=false&page=<%=currentPage%>" method="POST">
                                    <input class="btn p-1 m-1 btn-danger btn-sm" type="submit" value="Cancel Delivery">  
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
                
        </tbody>
        <% }) %>
    </table> 
<%- include('../includes/pagination.ejs', {userRole: userRole, lastPage: lastPage, filter: filter, keys: keys, currentPage: currentPage}) %>
<% } else { %>
    <h1 class="text-center text-danger font-weight-bold">দুঃখিত, অনুসন্ধানকৃত তথ্য ডাটাবেজে পাওয়া যায় নি...</h1>
<% } %>


<%- include('../includes/search-modal.ejs', {userRole: userRole}) %>
<%- include ../includes/footer-text.ejs %>
<%- include ../includes/footer.ejs %>