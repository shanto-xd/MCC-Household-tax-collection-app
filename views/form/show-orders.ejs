<%- include ../includes/header.ejs %>

    <title>প্লেট অর্ডার | <%=userRole%></title>
</head>

<body>
    <%- include('../includes/nav.ejs', {userRole: userRole}) %>
    <h1 class="text-center my-3">অর্ডারের তথ্য দেখুন <span class="ml-5"><a class="btn btn-lg btn-primary" data-toggle="modal" data-target="#searchAssessment" href="">তথ্য খুঁজুন</a></span></h1> 

    <% if(surveys.length > 0) { %>
    
    <table class="table table-sm" border = "1"  style="font-size: 13px !important">
        <thead>
            <tr>
                <th>এসেসমেন্ট আইডি</th>
                <th>বিল নং</th>
                <th>মালিকের নাম</th>
                <!-- <th>পিতা/স্বামীর নাম</th> -->
                <th>পোস্টকোড</th>
                <th>ওয়ার্ড</th>
                <th>রাস্তা/মহল্লা</th>
                <th>ব্লক</th>
                <th>থানা</th>
                <th>মুক্তিযোদ্ধা</th>
                <th>মোবাইল</th>
                <th>হোল্ডিং এর ধরন</th>
                <th>হোল্ডিং এর নাম</th>
                <th>প্লেট সাইজ</th> 
                <th>বিল পরিশোধ</th>
                <th>হোল্ডিং নং</th>
            </tr>
        </thead>

        <% surveys.forEach(survey => {%>
             <tbody>
                <tr>
                    <td><a href="/show-info/<%=survey._id%>"><%= survey.assessment_id%></a></td>
                    <td><%= survey.order.bill%></td>
                    <td><%= survey.ownerName%></td>
                    <!-- <td><%= survey.ownersFH %></td> -->
                    <td><%= survey.postcode %></td>
                    <td><%= survey.ward %></td>
                    <td><%= survey.road %></td>
                    <td><%= survey.block %></td>
                    <td><%= survey.thana %></td>
                    <td><%= survey.freedomFighter %></td>
                    <td><%= survey.mobile %></td>
                    <td><%= survey.holdingType %></td>
                    <td><%= survey.holdingName %></td>
                    <td class="text-danger" ><%= survey.order.plateSize %></td>
                    <td><%= survey.order.paid %></td>
                    <td class="text-success"><%= survey.holding %></td>
                </tr>
        </tbody>
        <% }) %>
    </table>

    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-2 mx-auto">
               <% if (lastPage > 0) { %>
        <nav>
            <ul class="pagination offset-md-3">
            <% if (currentPage == 1) { %>
              <li class="page-item disabled"><a class="page-link">First</a></li>
            <% } else { %>
              <li class="page-item"><a href="?page=1&role=<%=userRole%>" class="page-link">First</a></li>
            <% } %>
            
            <% var i = (Number(currentPage) > 5 ? Number(currentPage) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                <% } %>
                <% for (; i <= (Number(currentPage) + 4) && i <= lastPage; i++) { %>
                    <% if (i == currentPage) { %>
                        <li class="page-item active"><a class="page-link"><%= i %></a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="?page=<%= i %>&role=<%=userRole%>"><%= i %></a></li>
                    <% } %>
                    <% if (i == Number(currentPage) + 4 && i < lastPage) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                <% } %>
                <% if (currentPage == lastPage) { %>
                    <li class="page-item disabled"><a class="page-link">Last</a></li>
                <% } else { %>
                    <li class="page-item"><a href="?page=<%= lastPage %>&role=<%=userRole%>" class="page-link">Last</a></li>
                <% } %>
            </ul>
        </nav>
     <% } %>
            </div>
        </div>
    </div>
<% } else { %>
    <h1 class="text-center text-danger font-weight-bold">দুঃখিত, অনুসন্ধানকৃত তথ্য ডাটাবেজে পাওয়া যায় নি...</h1>
<% } %>


<%- include('../includes/search-modal.ejs', {userRole: userRole}) %>
